<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_s"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_e"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.778"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_t"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_b"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.105"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/boldtext_s"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.033"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/boldtext_e"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.629"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/boldtext_t"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/boldtext_b"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.048"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/time_e"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.337"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/time_t"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.049"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/time_b"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.079"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/teacher_e"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.755"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/teacher_t"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/teacher_b"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

    <TextView
        android:background="@drawable/button_round"
        android:backgroundTint="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/item_t"
        app:layout_constraintBottom_toBottomOf="@id/item_b"
        app:layout_constraintStart_toStartOf="@id/item_s"
        app:layout_constraintEnd_toEndOf="@id/item_e"/>
    <TextView
        app:layout_constraintTop_toTopOf="@id/boldtext_t"
        app:layout_constraintBottom_toBottomOf="@id/boldtext_b"
        app:layout_constraintStart_toStartOf="@id/boldtext_s"
        app:layout_constraintEnd_toEndOf="@id/boldtext_e"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="12/20(화) 홈베이스 이용 공지"
        android:fontFamily="@font/pretendard_extrabold"
        android:textColor="@color/black"
        android:textSize="20dp"/>
    <TextView
        app:layout_constraintTop_toTopOf="@id/time_t"
        app:layout_constraintBottom_toBottomOf="@id/time_b"
        app:layout_constraintStart_toStartOf="@id/boldtext_s"
        app:layout_constraintEnd_toEndOf="@id/time_e"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2022.12.20 11:00"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/hint_black1"
        android:textSize="16dp"/>
    <TextView
        app:layout_constraintTop_toTopOf="@id/teacher_t"
        app:layout_constraintBottom_toBottomOf="@id/teacher_b"
        app:layout_constraintStart_toStartOf="@id/boldtext_e"
        app:layout_constraintEnd_toEndOf="@id/teacher_e"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="이명규T"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/hint_black1"
        android:textSize="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>