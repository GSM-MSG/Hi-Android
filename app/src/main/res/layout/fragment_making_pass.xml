<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MakingPassFragment">

    <!--뒤로가기 버튼-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/backBtnGuideLeft"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/backBtnGuideTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.017"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/backBtnGuideBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0687"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/backBtnGuideRight"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"/>
    <!--텍스트 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/TextGuide_ver_left"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>
    <!-- 가장 큰 텍스트 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/titleTextGuideRight"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.63"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/titleTextGuideTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.092"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/titleTextGuideBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.154"/>
    <!-- 좀 작은 텍스트 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/littelTextGuide_ver_right"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/littelTextGuide_hor_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.184"/>
    <!-- 비밀번호 위 작은 텍스트 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/subTitleTextGuideRight"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.34"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/smallTextGuide_hor_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.338"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/subTitleTextGuideBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.362"/>
    <!-- 비밀번호 입력란 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/passInputGuide_ver_right"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/passInputGuide_hor_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.425"/>
    <!-- 비밀번호 확인란 위 작은 텍스트 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/subTextGuideTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.443"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/subTextGuideBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.47"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/smallTextGUide2_ver_right"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>
    <!-- 비밀번호 확인란 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/reinputPassGuide_hor_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.538"/>
    <!-- 버튼-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nextStepBtnGuideTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8954"/>

    <ImageButton
        android:id="@+id/goBackButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/backtracking_button_image"
        app:layout_constraintStart_toStartOf="@id/backBtnGuideLeft"
        app:layout_constraintEnd_toEndOf="@id/backBtnGuideRight"
        app:layout_constraintTop_toTopOf="@id/backBtnGuideTop"
        app:layout_constraintBottom_toBottomOf="@id/backBtnGuideBottom"/>
    <TextView
        android:id="@+id/bigTiltleText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/TextGuide_ver_left"
        app:layout_constraintTop_toTopOf="@id/titleTextGuideTop"
        app:layout_constraintBottom_toBottomOf="@id/titleTextGuideBottom"
        app:layout_constraintEnd_toEndOf="@id/titleTextGuideRight"
        android:text="@string/bigTitle_making_pass"
        android:textSize="32.64sp"
        android:fontFamily="@font/pretendard_extrabold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/smallText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/TextGuide_ver_left"
        app:layout_constraintTop_toTopOf="@id/titleTextGuideBottom"
        app:layout_constraintEnd_toEndOf="@id/littelTextGuide_ver_right"
        app:layout_constraintBottom_toBottomOf="@id/littelTextGuide_hor_bottom"
        android:text="@string/smallTilte_making_pass"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/hint_black1"
        android:textSize="15.36sp"/>
    <TextView
        android:id="@+id/subTitleText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/TextGuide_ver_left"
        app:layout_constraintEnd_toEndOf="@id/subTitleTextGuideRight"
        app:layout_constraintTop_toTopOf="@id/smallTextGuide_hor_top"
        app:layout_constraintBottom_toBottomOf="@id/subTitleTextGuideBottom"
        android:text="@string/smallText_making_pass"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/hint_black2"/>
    <EditText
        android:id="@+id/inputNewPass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@drawable/focus_point"
        app:layout_constraintStart_toStartOf="@id/TextGuide_ver_left"
        app:layout_constraintEnd_toEndOf="@id/passInputGuide_ver_right"
        app:layout_constraintTop_toTopOf="@id/subTitleTextGuideBottom"
        app:layout_constraintBottom_toBottomOf="@id/passInputGuide_hor_bottom"
        android:hint="@string/input_pass"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="16sp"
        android:textColorHint="@color/hint_black1"
        android:inputType="textPassword"
        />
    <TextView
        android:id="@+id/smallText2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/TextGuide_ver_left"
        app:layout_constraintEnd_toEndOf="@id/smallTextGUide2_ver_right"
        app:layout_constraintTop_toTopOf="@id/subTextGuideTop"
        app:layout_constraintBottom_toBottomOf="@id/subTextGuideBottom"
        android:text="@string/reinput_pass"
        android:textColorHint="@color/hint_black2"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_medium"/>
    <EditText
        android:id="@+id/reinput_pass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@drawable/focus_point"
        app:layout_constraintStart_toStartOf="@id/TextGuide_ver_left"
        app:layout_constraintEnd_toEndOf="@id/passInputGuide_ver_right"
        app:layout_constraintTop_toTopOf="@id/subTextGuideBottom"
        app:layout_constraintBottom_toBottomOf="@id/reinputPassGuide_hor_bottom"
        android:hint="@string/input_pass"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="16sp"
        android:textColorHint="@color/hint_black1"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/nextStepBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/nextStepBtnGuideTop"
        android:background="@color/hint_black1"
        android:text="@string/last_sinup"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="23sp"/>

        









</androidx.constraintlayout.widget.ConstraintLayout>